# Flask Configuration
# Environment: development or production
FLASK_ENV=development
# Enable debug mode (disable in production)
FLASK_DEBUG=True
# Secret key for session encryption (generate: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here
# Master API key for administrative operations (generate: openssl rand -hex 32)
MASTER_API_KEY=your-master-api-key-here

# Database Configuration
# PostgreSQL host
DB_HOST=localhost
# PostgreSQL port
DB_PORT=5432
# Database name
DB_NAME=auth_service
# Database user (should match setup-database.py)
DB_USER=auth-admin
# Database password
DB_PASSWORD=your-password-here

# SendGrid Configuration (used for transactional emails)
# SendGrid API key for sending emails
SENDGRID_API_KEY=your-sendgrid-api-key-here
# Default fallback sender email (per-site settings override this)
EMAIL_FROM=noreply@yourdomain.com
# Default fallback sender name (per-site settings override this)
EMAIL_FROM_NAME=Auth Service

# Token Expiration (in seconds)
# Auth session token lifetime (default: 1 hour)
AUTH_TOKEN_EXPIRATION=3600
# Email verification token lifetime (default: 24 hours)
EMAIL_VERIFICATION_EXPIRATION=86400
# Password reset token lifetime (default: 1 hour)
PASSWORD_RESET_EXPIRATION=3600
# Email change token lifetime (default: 1 hour)
EMAIL_CHANGE_EXPIRATION=3600

# Application Configuration
# Host to bind to (0.0.0.0 for all interfaces)
APP_HOST=0.0.0.0
# Port to listen on
APP_PORT=5678
